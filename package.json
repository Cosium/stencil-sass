{
  "name": "@stencil/sass",
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist && npm run lint",
    "build": "tsc && npm run rollup && npm run test",
    "watch": "tsc --watch",
    "rollup": "rollup -c rollup.config.js",
    "version": "npm run build",
    "release": "np",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^10.0.0",
    "@types/sass": "^1.16.0",
    "jest": "^24.7.1",
    "np": "^3.0.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-node-resolve": "^4.2.3",
    "sass": "^1.19.0",
    "tslint": "^5.16.0",
    "tslint-ionic-rules": "0.0.19",
    "typescript": "^3.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/stencil-sass.git"
  },
  "author": "Ionic Team",
  "homepage": "https://stenciljs.com/",
  "description": "The Stencil Sass Plugin",
  "keywords": [
    "stencil",
    "sass"
  ],
  "jest": {
    "transform": {
      "^.+\\.(js|ts|tsx)$": "<rootDir>/test/jest.preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "testURL": "http://localhost"
  }
}
